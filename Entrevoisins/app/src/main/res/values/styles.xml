<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="BigWhiteText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/white_text_title</item>
        <item name="android:layout_marginStart">@dimen/text_margin</item>
        <item name="android:layout_marginBottom">@dimen/bigWhiteText_margin_bottom</item>
    </style>

    <style name="Title_text" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_title</item>
        <item name="android:layout_marginStart">@dimen/text_margin</item>
    </style>

    <style name="Text_view_style" parent="TextAppearance.AppCompat">
        <item name="android:background">@color/white</item>
    </style>

    <style name="Card_view_style" parent="TextAppearance.AppCompat">
        <item name="android:background">@color/white</item>
        <item name="android:layout_marginStart">@dimen/view_margin</item>
        <item name="android:layout_marginTop">@dimen/view_margin</item>
        <item name="android:layout_marginEnd">@dimen/view_margin</item>
        <item name="cardCornerRadius">15dp</item>
        <item name="cardElevation">10dp</item>
    </style>

    <style name="Fab_favorite_style">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="fabCustomSize">40dp</item>
        <item name="android:src">@drawable/ic_star</item>
        <item name="android:tint">@color/yellow</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="borderWidth">0dp</item>
        <item name="elevation">15dp</item>
    </style>


</resources>
